### Global Variables

# system
    set $mod Mod4
    set $left h
    set $down j
    set $up k
    set $right l

# applications
    set $term alacritty
    set $browser brave

# lock and idle 
    # 5 minutes
    set $lock_short 300
    # 20 minutes 
    set $lock_long 1200
    # lock scripts
    set $lock_cmd ~/scripts/lock.sh 

# app launcher menu
    set $menu tofi-drun -c ~/.config/tofi/config | xargs swaymsg exec --
    # set $menu wofi --show drun -i | xargs swaymsg exec --

### Key bindings
    include ./bindings
### Custom tools
    include ./custom
### Layout settings
    include ./layout
### Input settings keyboard etc.
    include ./input
### Output settings for monitors etc.
    include ./output

    include /etc/sway/config.d/*
