export ZSH="$HOME/.oh-my-zsh"
export EDITOR='nvim'

# https://github.com/rupa/z
source /opt/z.sh
# load aliases
source ~/.alias

ZSH_THEME="sorin"

fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src

plugins=( 
    sudo # if you forget sudo hit esc twice
    git
    zsh-autosuggestions
    zsh-completions
    fzf-tab
)

source $ZSH/oh-my-zsh.sh
export DENO_INSTALL="/home/frank/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"
export PATH="/opt/google-cloud-sdk:$PATH"

# bun completions
[ -s "$HOME/.bun/_bun" ] && source "/$HOME/.bun/_bun"

# bun
export BUN_INSTALL="/$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# bun completions
[ -s "/home/frank/.bun/_bun" ] && source "/home/frank/.bun/_bun"

# pnpm
export PNPM_HOME="/home/frank/.local/share/pnpm"
export PATH="$PNPM_HOME:$PATH"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/opt/google-cloud-sdk/path.zsh.inc' ]; then . '/opt/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/opt/google-cloud-sdk/completion.zsh.inc' ]; then . '/opt/google-cloud-sdk/completion.zsh.inc'; fi

export _JAVA_AWT_WM_NONREPARENTING=1
